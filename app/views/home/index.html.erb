<h1>Colorpicker Home</h1>
<body id="color" background="red">
  <form action="/" id="dailyEvents">
    <select name="date">
      <% for i in 0...@NUM_DAYS %>
        <option name=<%= "\"" + i.to_s + "\"" %> value=<%= i.to_s %>><%= @search_days[i] %></option>
      <% end %>
    </select>
    <input type="submit" value="Set Background" />
  </form>

  <%= @sections.length %><br>
  <% @sections.each do |s| %>
    <% s = s.to_s.encode!('UTF-8', 'binary', invalid: :replace, undef: :replace, replace: '') %>
    <% if s.include?("+on+" + @search_days[@date]) %>
      <%= s %><br><br>
    <% end %>
  <% end %>
</body>
